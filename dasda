-- Delta Executor Warning GUI (Styled like Pet Egg ESP)

local isDelta = (identifyexecutor and identifyexecutor() == "Delta") or false

if isDelta then
    local gui = Instance.new("ScreenGui")
    gui.Name = "DeltaBlockNotice"
    gui.ResetOnSpawn = false
    gui.Parent = game:GetService("CoreGui")

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 250, 0, 120)
    frame.Position = UDim2.new(0.5, -125, 0.4, 0)
    frame.BackgroundColor3 = Color3.fromRGB(150, 225, 100)
    frame.BorderSizePixel = 0
    frame.Parent = gui

    local titleBar = Instance.new("TextLabel")
    titleBar.Size = UDim2.new(1, 0, 0, 25)
    titleBar.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
    titleBar.Text = "⚠️ Delta Detected"
    titleBar.Font = Enum.Font.GothamBold
    titleBar.TextColor3 = Color3.new(1, 1, 1)
    titleBar.TextSize = 14
    titleBar.Parent = frame

    local status = Instance.new("TextLabel")
    status.Size = UDim2.new(1, -10, 0, 40)
    status.Position = UDim2.new(0, 5, 0, 30)
    status.BackgroundTransparency = 1
    status.TextWrapped = true
    status.Font = Enum.Font.Gotham
    status.TextColor3 = Color3.new(0, 0, 0)
    status.TextSize = 12
    status.Text = "Executor blocked this script.\nTurn off 'Anti-Scam' or use KRNL."
    status.Parent = frame

    local toggleBtn = Instance.new("TextButton")
    toggleBtn.Size = UDim2.new(0, 230, 0, 25)
    toggleBtn.Position = UDim2.new(0.5, -115, 1, -55)
    toggleBtn.BackgroundColor3 = Color3.fromRGB(50, 200, 100)
    toggleBtn.Text = "Use KRNL Instead"
    toggleBtn.TextColor3 = Color3.new(1, 1, 1)
    toggleBtn.Font = Enum.Font.GothamBold
    toggleBtn.TextSize = 13
    toggleBtn.Parent = frame

    toggleBtn.MouseButton1Click:Connect(function()
        if setclipboard then
            setclipboard("https://krnl.place/")
            toggleBtn.Text = "✔️ Link Copied!"
        else
            toggleBtn.Text = "❌ Cannot Copy"
        end
    end)

    local closeBtn = Instance.new("TextButton")
    closeBtn.Size = UDim2.new(0, 20, 0, 20)
    closeBtn.Position = UDim2.new(1, -25, 0, 5)
    closeBtn.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
    closeBtn.Text = "X"
    closeBtn.TextColor3 = Color3.new(1, 1, 1)
    closeBtn.Font = Enum.Font.GothamBold
    closeBtn.TextSize = 12
    closeBtn.Parent = frame

    closeBtn.MouseButton1Click:Connect(function()
        gui:Destroy()
    end)
end
